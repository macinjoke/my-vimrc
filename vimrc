set runtimepath+=~/.vim/
runtime! userautoload/*.vim
set number
set mouse=a
set backspace=0
set whichwrap=b,s,[,],~
set wildmenu wildmode=list
syntax on
set hlsearch
set cursorline
set laststatus=1
set statusline=%F%r%=%p
set encoding=utf-8
set fileencodings=iso-2022-jp,cp932,sjis,ecu-jp,utf-8
"indent config
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent
set smartindent

