
" set option
set runtimepath+=~/.vim/
runtime! userautoload/*.vim
set number
set mouse=a
set backspace=indent,eol,start
set whichwrap=b,s,[,],~
set scrolloff=10
set sidescrolloff=16
set wildmenu wildmode=list
syntax on
set hlsearch
set cursorline
set laststatus=1
set statusline=%F%r%=%p

" set clipboard=unnamedplus,autoselect
set clipboard+=unnamed

" ()''""とかのユーティリティ
set surround
vmap s <Plug>VSurround

" 削除でコピーしないように
nnoremap x "_x
vnoremap x "_x
nnoremap D "_D
" コピーしたいとき用に
nnoremap yD D

" 改行
inoremap <C-S-cr> <Esc>O

" Emacs風横移動
inoremap <C-f> <Right>
inoremap <C-b> <Left>

" ヴィジュアルモード時にスペースでコピー
vnoremap <Space> y

" クリップボードからペースト
nnoremap <Insert> "*p

